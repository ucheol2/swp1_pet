<div class="row">
<div class="col s10 offset-s1">

<p id="notice"><%= notice %></p>

<h3 class="center-align">Photo list</h3>
<br>
<h4 class="right-align"><%= link_to '등록하기', new_post_path %></h4>
<br>

<table class="centered, striped">
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>사진</th>
      <th>게시자</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><img class="responsive-img" style="height:100px" src="<%= post.img %>"></td>
        <td><%= post.name %></td>
      
        <td><%= link_to '내용 보기', post %></td>
        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div></div>
