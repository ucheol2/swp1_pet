<p id="notice"><%= notice %></p>

<h3>Photo list<hr><%= link_to '등록하기', new_post_path %></h3>
<hr>
<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>사진</th>
      <th>게시자</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><img style="height:100px" src="<%= post.img %>"></td>
        <td><%= post.name %></td>
      
        <td><%= link_to '내용 보기', post %></td>
        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


