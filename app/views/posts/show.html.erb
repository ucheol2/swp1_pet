<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12">
    <div class="card-panel center"> 
      <h3>
        <%= @post.title %>
      </h3>
      <p style="margin-bottom: 6em;">
        <%= @post.content %>
      </p>
      <img class="hoverable style-image" src="<%= @post.img %>">
    </div>
  </div>
</div>

<div class="center-align">
  <%= link_to '수정', edit_post_path(@post), class: "waves-effect waves-darken btn-flat" %> |
  <%= link_to '목록으로', posts_path, class: "waves-effect waves-darken btn-flat" %>
</div>
