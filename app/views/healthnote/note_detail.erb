<div class="row" style="margin-top: 5em; margin-bottom: 5em;">
  <div class="col s10 offset-s1">
    <table class="responsive-table bordered highlight">
      <thead>
        <tr>
          <th data-field="id">번호</th>
          <th data-field="name">내용</th>
          <th data-field="date">날짜</th>
          <th data-field="hospital">동물병원</th>
          <th data-field="etc">비고</th>
        </tr>
      </thead>
      <tbody>
        <% @healthnote.each do |item| %>
          <tr>
            <td><%= item.order %></td>
            <td><%= item.content %></td>
            <td><%= item.date %></td>
            <td><%= item.hospital %></td>
            <td><%= item.etc %></td>
            <td><%= link_to '삭제', "/healthnote/delete/" + item.id.to_s, data: { confirm: '정말 삭제하시겠습니까?' }, class: "pink-text" %></td>
            <td><a class="pink-text" href="/healthnote/edit/<%=item.id.to_s%>">수정</a></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
    
    <br></br>
    
    <a class="right btn pink waves-effect waves-light" href="/healthnote/input/<%= params[:id] %>"><i class="material-icons left">pets</i>추가</a>
    
    <br></br>
    
    <form action="/healthnote/note_detail/<%= params[:id] %>" id="health_search">
      <input id="irum" type="text" name="irum" placeholder="검색어를 입력하세요.">
      <button class="right btn pink waves-effect waves-light" type="submit" name="action">검색
        <i class="material-icons right">search</i>
      </button>
    </form>
  </div>
</div>
