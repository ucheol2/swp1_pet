<% current_user.pets.each do |item| %>
<div class="container">
    <div class="devise_block">
        <div class="field">
            <img src="<%= item.img.url %>" height="200">
        </div>    
    
        <div class="field">
            <label>이름</label>
            <%=item.name%>
        </div>
    
        <div class="field">
            <label>성별</label>
            <%=item.gender%>
        </div>
    
        <div class="field">
            <label>생일</label>
            <%=Time.parse(item.birth).strftime("%Y:%M %d")%>
        </div>

        <div class="field">
            <label>소개</label>
            <textarea><%=item.about%></textarea>
        </div>


    </div>
</div>
<a href="/profile/edit/<%= item.id %>"><button>수정하기</button></a>
<%= link_to '지우기','/profile/destroy/'+item.id.to_s, data: {confirm: "지우시겠습니까?"} %>

<% end %>
<a href="/profile/create"><button>나의 멍냥 추가하기</button></a>
